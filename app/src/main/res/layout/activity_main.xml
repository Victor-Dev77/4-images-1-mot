<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageLevel"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@android:color/white"
        android:src="@drawable/ic_launcher_background"
        />


    <LinearLayout
        android:id="@+id/linearResultWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/imageLevel"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:background="@drawable/btn_word_shape"
        android:padding="8dp"
        android:text="C" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_word_shape"
            android:padding="8dp"
            android:text="D" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_word_shape"
            android:padding="8dp"
            android:text="E" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_word_shape"
            android:padding="8dp"
            android:text="F" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_word_shape"
            android:padding="8dp"
            android:text="G" />

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridRandomLetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearResultWord"
        android:layout_marginTop="16dp"
        android:rowCount="2"
        android:columnCount="7">

        <Button
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="A" />

        <Button
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="B" />

        <Button
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="C" />

        <Button
            android:layout_column="3"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="D" />

        <Button
            android:layout_column="4"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="E" />

        <Button
            android:layout_column="5"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="F" />

        <Button
            android:layout_column="6"
            android:layout_row="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="G" />



        <Button
            android:layout_column="0"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="A" />

        <Button
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="B" />

        <Button
            android:layout_column="2"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="C" />

        <Button
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="D" />

        <Button
            android:layout_column="4"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="E" />

        <Button
            android:layout_column="5"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="F" />

        <Button
            android:layout_column="6"
            android:layout_row="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="@drawable/btn_selection_letter_shape"
            android:padding="8dp"
            android:text="G" />

    </GridLayout>

</RelativeLayout>